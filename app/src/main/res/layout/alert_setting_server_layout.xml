<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/constraint_layout_style"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="@dimen/dialoge_height">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        style="@style/constraint_layout_style"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView"
            style="@style/oneLineBlackText_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/IP_hint"
            app:autoSizeTextType="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />


        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/constraint_layout_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView"
            app:layout_constraintTop_toTopOf="parent">

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/num_pick_ip1_alert_dialoge"
                style="@style/number_picker_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.25"
                app:np_dividerColor="?attr/colorLightGrayAttr"
                app:np_max="@integer/max_ip"
                app:np_min="@integer/min_ip"
                app:np_selectedTextColor="?attr/colorPrimaryDarkAttr"
                app:np_selectedTextSize="@dimen/np_selected_text_size"
                app:np_textColor="?attr/colorPrimaryAttr"
                app:np_textSize="@dimen/np_text_size" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/num_pick_ip2_alert_dialoge"
                style="@style/number_picker_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toEndOf="@+id/num_pick_ip1_alert_dialoge"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.25"
                app:np_dividerColor="?attr/colorLightGrayAttr"
                app:np_max="@integer/max_ip"
                app:np_min="@integer/min_ip"
                app:np_selectedTextColor="?attr/colorPrimaryDarkAttr"
                app:np_selectedTextSize="@dimen/np_selected_text_size"
                app:np_textColor="?attr/colorPrimaryAttr"
                app:np_textSize="@dimen/np_text_size" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/num_pick_ip3_alert_dialoge"
                style="@style/number_picker_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toEndOf="@+id/num_pick_ip2_alert_dialoge"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.25"
                app:np_dividerColor="?attr/colorLightGrayAttr"
                app:np_max="@integer/max_ip"
                app:np_min="@integer/min_ip"
                app:np_selectedTextColor="?attr/colorPrimaryDarkAttr"
                app:np_selectedTextSize="@dimen/np_selected_text_size"
                app:np_textColor="?attr/colorPrimaryAttr"
                app:np_textSize="@dimen/np_text_size" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/num_pick_ip4_alert_dialoge"
                style="@style/number_picker_style"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toEndOf="@+id/num_pick_ip3_alert_dialoge"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.25"
                app:np_dividerColor="?attr/colorLightGrayAttr"
                app:np_max="@integer/max_ip"
                app:np_min="@integer/min_ip"
                app:np_selectedTextColor="?attr/colorPrimaryDarkAttr"
                app:np_selectedTextSize="@dimen/np_selected_text_size"
                app:np_textColor="?attr/colorPrimaryAttr"
                app:np_textSize="@dimen/np_text_size" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/constraint_layout_style"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintWidth_percent="1">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_confirm_alert_dialoge"
            style="@style/oneLineAccentText_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/ok"
            app:autoSizeTextType="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>