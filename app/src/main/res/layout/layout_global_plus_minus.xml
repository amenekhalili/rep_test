<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conslay_global_plus_minus"
    style="@style/constraint_layout_style"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/card_view_style"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/card_view_corner"
        app:cardElevation="@dimen/card_view_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/constraint_layout_in_card_view_style">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_plus_global_plus_minus"
                style="@style/img_style"
                android:layout_width="@dimen/plus_minus_size"
                android:layout_height="@dimen/plus_minus_size"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1"
                app:srcCompat="@drawable/ic_plus" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_minus_global_plus_minus"
                style="@style/img_style"
                android:layout_width="@dimen/plus_minus_size"
                android:layout_height="@dimen/plus_minus_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1"
                app:srcCompat="@drawable/ic_minus" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_text_global_plus_minus"
                style="@style/oneLine_Number_BlackText_style_body_row_form"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/txt_report_size_2"
                app:autoSizeTextType="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_plus_global_plus_minus"
                app:layout_constraintStart_toEndOf="@+id/img_minus_global_plus_minus"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="12545.5488" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>