<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/constraint_layout_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.robertlevonyan.views.chip.Chip
        android:id="@+id/chip_cancel_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mcv_backgroundColor="?attr/colorAccentAttr"
        app:mcv_closable="true"
        app:mcv_closeColor="?attr/colorWhiteAttr"
        app:mcv_textColor="?attr/colorWhiteAttr" />


</androidx.constraintlayout.widget.ConstraintLayout>